<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetDescRewards"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/height_desc_rewards_bottomsheet"
    app:layout_behavior="@string/bottom_sheet_behavior">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleSheet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_desc_rewards_bottomsheet"
        android:background="@android:color/holo_green_light"
        android:gravity="center"
        android:text="@string/bottom_sheet_getting_stars"
        android:textSize="24sp"
        app:fontFamily="@font/comfortaa_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleSheet">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleSheet">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBodySheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_body"
                android:text="@string/bottom_sheet_rating_rules1"
                android:textSize="16sp"
                app:fontFamily="@font/comfortaa_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/viewGuideLine5"
                android:layout_width="match_parent"
                android:background="@color/cardview_dark_background"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/bottom_sheet_bg_line_guide"
                app:layout_constraintTop_toBottomOf="@+id/tvBodySheet"
                android:layout_margin="@dimen/margin_body"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBodySheet2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_body"
                android:text="@string/bottom_sheet_rating_rules2"
                android:textSize="16sp"
                app:fontFamily="@font/comfortaa_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewGuideLine5" />

            <ImageView
                android:id="@+id/imageStar"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:src="@drawable/star"
                app:layout_constraintBottom_toBottomOf="@+id/tvBodySheet2"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@+id/tvBodySheet2"
                app:layout_constraintTop_toTopOf="@+id/tvBodySheet2" />
            <View
                android:id="@+id/viewGuideLine4"
                android:layout_width="match_parent"
                android:background="@color/cardview_dark_background"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvBodySheet2"
                android:layout_margin="@dimen/margin_body"
                android:backgroundTint="@color/bottom_sheet_bg_line_guide"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBodySheet3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_body"
                android:text="@string/bottom_sheet_rating_rules3"
                android:textSize="16sp"
                app:fontFamily="@font/comfortaa_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewGuideLine4" />

            <ImageView
                android:id="@+id/imageStar2"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:src="@drawable/star"
                app:layout_constraintBottom_toBottomOf="@+id/tvBodySheet3"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@+id/tvBodySheet3"
                app:layout_constraintTop_toTopOf="@+id/tvBodySheet3" />

            <View
                android:id="@+id/viewGuideLine3"
                android:layout_width="match_parent"
                android:background="@color/cardview_dark_background"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvBodySheet3"
                android:layout_margin="@dimen/margin_body"
                android:backgroundTint="@color/bottom_sheet_bg_line_guide"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBodySheet4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_body"
                android:text="@string/bottom_sheet_rating_rules4"
                android:textSize="16sp"
                app:fontFamily="@font/comfortaa_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewGuideLine3" />


            <ImageView
                android:id="@+id/imageStar3"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:src="@drawable/star"
                app:layout_constraintBottom_toBottomOf="@+id/tvBodySheet4"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@+id/tvBodySheet4"
                app:layout_constraintTop_toTopOf="@+id/tvBodySheet4" />

            <View
                android:id="@+id/viewGuideLine"
                android:layout_width="match_parent"
                android:background="@color/cardview_dark_background"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvBodySheet4"
                android:layout_margin="@dimen/margin_body"
                android:backgroundTint="@color/bottom_sheet_bg_line_guide"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBodySheet5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_body"
                android:text="@string/bottom_sheet_rating_rules5"
                android:textSize="16sp"
                app:fontFamily="@font/comfortaa_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewGuideLine" />

            <ImageView
                android:id="@+id/imageStar4"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:src="@drawable/star"
                app:layout_constraintBottom_toBottomOf="@+id/tvBodySheet5"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@+id/tvBodySheet5"
                app:layout_constraintTop_toTopOf="@+id/tvBodySheet5" />
            <View
                android:id="@+id/viewGuideLine2"
                android:layout_width="match_parent"
                android:background="@color/cardview_dark_background"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvBodySheet5"
                android:layout_margin="@dimen/margin_body"
                android:backgroundTint="@color/bottom_sheet_bg_line_guide"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBodySheet6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_body"
                android:text="@string/bottom_sheet_rating_rules6"
                android:textSize="16sp"
                app:fontFamily="@font/comfortaa_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewGuideLine2" />

            <ImageView
                android:id="@+id/imageStar5"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:src="@drawable/star"
                app:layout_constraintBottom_toBottomOf="@+id/tvBodySheet6"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@+id/tvBodySheet6"
                app:layout_constraintTop_toTopOf="@+id/tvBodySheet6" />
            <View
                android:id="@+id/viewGuideLine6"
                android:layout_width="match_parent"
                android:background="@color/cardview_dark_background"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvBodySheet6"
                android:layout_margin="@dimen/margin_body"
                android:backgroundTint="@color/bottom_sheet_bg_line_guide"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>