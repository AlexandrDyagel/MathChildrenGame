<resources xmlns:tools="http://schemas.android.com/tools"
    >
    <!-- Base application theme. -->
    <style name="Theme.MathChildrenGame" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#D1A4DA02</item>
        <item name="colorPrimaryVariant">#CE82AD01</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <!-- Тема для Splash Screen-->
    <style name="splashScreenTheme" parent="Theme.MathChildrenGame">
        <item name="android:windowBackground">@drawable/splash_view</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Тема для диалога рейтинга приложения -->
    <style name="DialogRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/holo_green_light</item>
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>
    </style>

    <!-- Тема для переключателя режима игры -->
    <style name="SwitchGameMode" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@color/tvGameModeSwipe</item>

        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@color/tvGameModeClick</item>

        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

</resources>